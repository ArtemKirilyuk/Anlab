@using Anlab.Core.Domain

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    <form class="flexer" asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
  <p><a asp-area="" asp-controller="Profile" asp-action="Index" title="Manage">Hello @user.Name!</a></p>


                <button type="submit" class="btn-hollow">Log out</button>

    </form>
}
else
{

        <p><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></p>

}

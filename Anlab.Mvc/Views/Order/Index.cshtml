@using AnlabMvc.Models.Order
@model IList<Order>

@{
    ViewData["Title"] = "Orders";
}

<p>
    <a asp-action="Create" class="btn btn-default">Create Order</a>    
</p>


<table id="table">
    <thead>
    <tr>
        <th></th>
        <th>Id</th>
        <th>Created</th>
        <th>Updated</th>
        <th>Project</th>
        <th>Status</th>
        
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@if (order.Status == OrderStatusCodes.Created)
                {
                    <a asp-action="Confirmation" asp-route-id="@order.Id">Confirm</a>
                    <a asp-action="Edit" asp-route-id="@order.Id">Edit</a>
                }
                else if(order.Status == OrderStatusCodes.Complete)
                {
                    <a asp-controller="Results" asp-action="Link" asp-route-id="@order.ShareIdentifier">Results</a>
                }
                else
                {
                    <a asp-action="Details" asp-route-id="@order.Id">Details</a>
                }
            </td>
            <td>@order.Id</td>
            <td>@order.Created</td>
            <td>@order.Updated</td>
            <td>@order.Project</td>
            <td>@order.Status</td>
        </tr>
    }
    </tbody>
</table>

@section AdditionalStyles
{
    @{ await Html.RenderPartialAsync("_DataTableStylePartial"); }
}

@section Scripts
{
    @{ await Html.RenderPartialAsync("_DataTableScriptsPartial"); }

    <script type="text/javascript">
        $(function() {
            $("#table").dataTable({
                "sorting": [[2, "desc"]],
                "columnDefs": [
                    {
                        "type": "date", "targets" : [2,3]
                    },
                    {
                        "targets": [0],
                        "orderable": false                        
                    },

                ]
            });
        });
    </script>
}
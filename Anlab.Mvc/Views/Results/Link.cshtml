@using Humanizer
@model AnlabMvc.Models.Order.OrderReviewModel

@{
    ViewData["Title"] = "Results for #" + Model.Order.RequestNum;
}
@section ActionButtons
{
<p>
<a class="btn btn-small" asp-action="Download" asp-route-id="@Model.Order.ShareIdentifier">
    <i class="fa fa-download" aria-hidden="true"></i> Download
    </a>
</p>
}

<div class="col">



@Html.Partial("_OrderDetails")
</div>
@section AdditionalStyles
{
    @{ await Html.RenderPartialAsync("_DataTableStylePartial"); }
}

@section Scripts
{
    @{ await Html.RenderPartialAsync("_DataTableScriptsPartial"); }

    <script type="text/javascript">
        $(function() {
            $("#table").dataTable();
        });
    </script>

    @{ await Html.RenderPartialAsync("_ShowdownScriptsPartial"); }

}

@model List<Anlab.Core.Domain.MailMessage>
@{
    ViewData["Title"] = "Mail Queue";
}

<div class="col">
<button id="collapsebutton" class="btn-hollow"><i class="glyphicon glyphicon-minus"></i> Collapse All</button>
<button id="expandbutton" class="btn-hollow"><i class="glyphicon glyphicon-plus"></i> Expand All</button>

<div style="margin-top:16px;">
<table id="table" cellpadding="0" class="row-border stripe order-column dt-responsive">
    <thead>
        <tr>
            <th>Status:</th>
            <th>Id</th>
            <th>To:</th>
            <th>Subject:</th>
            <th>Sent At:</th>
            <th>Message Body:</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var message in Model)
    {
        <tr>
            <td>
                @if (message.Sent.HasValue)
                {
                    if (message.Sent.Value)
                    {
                        <i class="fa fa-check-circle" aria-hidden="true" title="Sent"></i>
                        @:Sent
                    }
                    else
                    {
                        <i class="fa fa-times-circle" aria-hidden="true" title="Failed"></i>
                        @:Failed
                    }
                }
                else
                {
                    <i class="fa fa-refresh" aria-hidden="true" title="Pending"></i>
                    @:Pending
                }
            </td>
            <td>@message.Order.Id</td>
            <td>@message.SendTo</td>
            <td>@message.Subject
                    @*<a data-toggle="collapse" href="#@message.Id" aria-expanded="true" aria-controls="@message.Id">Expand Body </a> |
                    <a href="@Url.Action("ViewMessage",new { id = message.Id })" target="_blank">Open in a new window</a>
                <div id="@message.Id" class="panel-collapse collapse">

                    <a data-toggle="collapse" href="#@message.Id" aria-expanded="true" aria-controls="@message.Id">Collapse Body </a> |
                    <a href="@Url.Action("ViewMessage",new { id = message.Id })" target="_blank">Open in a new window</a>
                </div>*@
            </td>
            <td>
                Created At: @message.CreatedAt.ToPacificTime().ToString("g")<br />
                @if (message.Sent.HasValue)
                {
                        @if (message.Sent.Value && message.SentAt.HasValue)
                        {
                            @:Sent At:
                            @message.SentAt.Value.ToPacificTime().ToString("g")
                        }
                        else
                        {
                            @:Error:
                            @message.FailureReason

                        }
                }
                else
                {
                    <br />
                }
            </td>
            <td>
                <a href="@Url.Action("ViewMessage",new { id = message.Id })" target="_blank">Open in a new window</a>
                <div class="panel-body">
                    @Html.Raw(message.Body)
                </div>
            </td>

        </tr>
    }

    </tbody>
</table>
    </div>
</div>
@section AdditionalStyles
{
    @{ await Html.RenderPartialAsync("_DataTableStylePartial"); }
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.1/css/responsive.dataTables.min.css" />
    <style>
        div.panel-body tr tr{
            background-color: transparent;
        }
        table {
            width: 100% !important;
            height: auto;
        }
        table tbody{
            vertical-align: top;
        }
        table tfoot{
            margin-bottom: 16px; 
        }
        i.fa-check-circle{
            color: #289616;
        }
        i.fa-times-circle{
            color: #db0a26;
        }
        i.fa-refresh{
            color: #2c8ba5;
        }
        footer{
            position: relative !important;
        }
    </style>

}
@section Scripts
{
    @{ await Html.RenderPartialAsync("_DataTableScriptsPartial"); }
    <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.1/js/dataTables.responsive.min.js"></script>

    <script type="text/javascript">
        $(function() {
            var table = $("#table").DataTable({
                "order": [[0, "desc"],[4,"desc"]],
                "columnDefs": [
                    {
                        "type": "ordering", "targets": [0,1,2,3,4]
                    },
                ],
                responsive: true,
            });

            $("#collapsebutton").hide();
            $("#expandbutton").click(function () {
                table.rows(':not(.parent)').nodes().to$().find('td:first-child').trigger('click');
                $("#expandbutton").hide();
                $("#collapsebutton").show();
            });

            $("#collapsebutton").click(function () {
                table.rows('.parent').nodes().to$().find('td:first-child').trigger('click');
                $("#expandbutton").show();
                $("#collapsebutton").hide();
            });

        });
    </script>
}
